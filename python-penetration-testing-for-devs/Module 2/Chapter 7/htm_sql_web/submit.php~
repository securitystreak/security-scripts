<?php
$name = $_POST["name"];

$message = $_POST["comment"];

$sendcomment = mysql_query("INSERT INTO comment SET  name='$name',  comment='$message' ");
if($sendcomment){

echo "<h1>Submission Successful</h1>";
header("location: index.php");
} else {
echo "There was an error with the submission. ";
}

?>
